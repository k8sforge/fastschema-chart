extends: default

rules:
  line-length:
    max: 120
    level: warning
  indentation:
    spaces: 2
  comments:
    min-spaces-from-content: 0
  comments-indentation: disable
  document-start: disable
  truthy:
    allowed-values: ["true", "false", "on", "off"]
  braces: disable

# Ignore Helm template files (they contain Go templating syntax)
ignore: |
  templates/
